    "email": "d.fiahfy@gmail.com",
    "url": "https://fiahfy.github.io/"
  },
  "dependencies": {
    "@fiahfy/semaphore": "^0.0.2",
    "@vue/composition-api": "^1.4.9",
    "color": "^4.2.3",
    "vue": "~2.6.14",
    "vuetify": "^2.6.4",
    "vuex": "~3.6.2",
    "vuex-module-decorators": "~1.2.0",
    "vuex-persist": "^3.1.3"
  },
  "devDependencies": {
    "@fiahfy/eslint-config-vue": "^0.0.16",
    "@types/chrome": "^0.0.181",
    "@types/color": "^3.0.3",
    "concurrently": "^7.1.0",
    "copy-webpack-plugin": "^10.2.4",
    "css-loader": "^6.7.1",
    "eslint": "^8.13.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^7.0.4",
    "mv3-hot-reload": "^0.2.7",
    "prettier": "^2.6.2",
    "sass": "~1.32.13",
    "sass-loader": "^12.6.0",
    "svg-inline-loader": "^0.8.2",
    "ts-loader": "^9.2.8",
    "typescript": "^4.6.3",
    "vue-loader": "~15.9.8",
    "vue-template-compiler": "^2.6.14",
    "vuetify-loader": "^1.7.3",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2"
  },
  "keywords": [
    "chrome extension",
    "vue",
    "vuetify",
    "webpack",
    "youtube"
  ],
  "private": true,
  "productName": "Flow Chat for YouTube Live",
  "repository": {
    "type": "git",
    "url": "https://github.com/fiahfy/youtube-live-chat-flow"
  },
  "scripts": {
    "build": "webpack",
    "dev": "concurrently npm:watch:*",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "eslint --ext .js,.ts,.vue --ignore-path .gitignore .",
    "lint:prettier": "prettier -c --ignore-path .gitignore .",
    "package": "npm run build && mkdir -p dist && zip -r dist/archive.zip app",
    "prepare": "husky install",
    "test": "npm run lint",
    "watch:dist": "mv3-hot-reload",
    "watch:src": "webpack -w --config webpack.config.dev.js"
  }
}
